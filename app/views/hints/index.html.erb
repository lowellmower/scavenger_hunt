<p id="notice"><%= notice %></p>

<h1>Listing Hints</h1>

<table>
  <thead>
    <tr>
      <th>Riddle</th>
      <th>Found</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Found by</th>
      <th>Next hint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hints.each do |hint| %>
      <tr>
        <td><%= hint.riddle %></td>
        <td><%= hint.found %></td>
        <td><%= hint.lat %></td>
        <td><%= hint.lon %></td>
        <td><%= hint.found_by %></td>
        <td><%= hint.next_hint %></td>
        <td><%= link_to 'Show', hint %></td>
        <td><%= link_to 'Edit', edit_hint_path(hint) %></td>
        <td><%= link_to 'Destroy', hint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hint', new_hint_path %>
